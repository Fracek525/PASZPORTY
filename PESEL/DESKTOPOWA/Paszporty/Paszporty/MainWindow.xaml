<Window x:Class="Paszporty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paszporty"
        mc:Ignorable="d"
        Background="#5F9EA0"
        ResizeMode="NoResize"
        Title="Wprowadzenie danych do paszportu: 00000000000" Height="400" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Margin="30,30,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0">Numer</TextBlock>
                        <TextBox Background="#F0FFFF" Grid.Row="0" Grid.ColumnSpan="2" Margin="124,0,30,18" Grid.RowSpan="3"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,15,0,-15">Imię</TextBlock>
                        <TextBox Background="#F0FFFF" Grid.Row="2" Margin="124,15,30,-15" Grid.ColumnSpan="2"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,49,0,-48">Nazwisko</TextBlock>
                        <TextBox Background="#F0FFFF" Grid.Row="2" Margin="124,48,30,-48" Grid.ColumnSpan="2"/>

                    </Grid>
                </StackPanel>

                <Border CornerRadius="5" BorderBrush="White" BorderThickness="2" Grid.Row="1" Grid.Column="0" RenderTransformOrigin="0.503,0.497" Margin="30,100,29,-257">
                    <StackPanel>

                        <TextBlock Margin="-230,-10,0,0" Background="#5F9EA0" Width="59"><Run Text="Kolor oczu"/></TextBlock>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>


                            <RadioButton Grid.Row="2" Grid.Column="0" Margin="54,22,139,-22" Grid.ColumnSpan="2"/>
                            <TextBlock Grid.Row="2" Margin="79,22,104,-17" Grid.ColumnSpan="2">Niebieskie</TextBlock>

                            <RadioButton Grid.Row="2" Grid.Column="0" Margin="54,62,129,-70" Grid.ColumnSpan="2"/>
                            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Margin="79,62,104,-70">Zielone</TextBlock>

                            <RadioButton Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="54,102,129,-102"/>
                            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Margin="80,102,104,-102">Piwne</TextBlock>
                        </Grid>
                    </StackPanel>
                </Border>


            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1">
            <Grid Height="381" RenderTransformOrigin="0.507,0.799" Width="384">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="293*"></RowDefinition>
                    <RowDefinition Height="94*"></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0">
                    <Image Source="/000-zdjecie.jpg" Height="195" Width="181" Margin="-200,30,0,0"></Image>
                    <Image Source="/000-odciski.jpg" Height="195" Width="181" Margin="200,-195,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0">
                    <Button Height="38" Width="368" Content="OK"/>
                </StackPanel>

            </Grid>
        </StackPanel>

    </Grid>
</Window>
